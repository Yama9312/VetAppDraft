<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imBtnGoBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/go_back"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/changeOrderOfSteps"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imBtnGoBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Steps 1 to 10 -->
        <!-- Step 1 -->

        <TextView
            android:id="@+id/step1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            android:text="@string/step1"
            app:layout_constraintEnd_toStartOf="@id/spinner1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Step 2 -->

        <TextView
            android:id="@+id/step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="8dp"
            android:text="@string/step2"
            app:layout_constraintEnd_toStartOf="@id/spinner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner1" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner1" />

        <!-- Step 3 -->

        <TextView
            android:id="@+id/step3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            android:text="@string/step3"
            app:layout_constraintEnd_toStartOf="@id/spinner3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner2" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner2" />

        <!-- Step 4 -->

        <TextView
            android:id="@+id/step4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            android:text="@string/step4"
            app:layout_constraintEnd_toStartOf="@id/spinner4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner3" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner3" />

        <!-- Step 5 -->
        <TextView
            android:id="@+id/step5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step5"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner5" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner4" />

        <!-- Step 6 -->
        <TextView
            android:id="@+id/step6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step6"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner6" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner5" />

        <!-- Step 7 -->
        <TextView
            android:id="@+id/step7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step7"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner7" />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner6" />

        <!-- Step 8 -->
        <TextView
            android:id="@+id/step8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step8"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner8" />

        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner7" />

        <!-- Step 9 -->
        <TextView
            android:id="@+id/step9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step9"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner9" />

        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner8" />

        <!-- Step 10 -->
        <TextView
            android:id="@+id/step10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step10"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spinner10" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@id/step10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner9" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applyChangesBtn"
            android:minHeight="48dp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/spinner10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
